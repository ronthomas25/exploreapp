<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".MainActivity"
    tools:ignore="NotSibling">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        tools:ignore="ExtraText">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background_image"
        android:src="@drawable/backgroundimage"
        android:scaleType="fitXY" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover"
        android:textColor="#000000"
        android:id="@+id/discover"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Top Picks"
        android:textColor="#000000"
        android:id="@+id/top_picks"
        android:textSize="17sp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:layout_below="@id/discover"
        tools:ignore="InvalidId" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_flipper_relative"
            android:layout_below="@id/top_picks">

            <ViewFlipper
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoStart="true"
                android:flipInterval="2000">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_picks"
        android:layout_marginTop="-30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/munnar_pic"
        android:src="@drawable/munnar"
        android:onClick="onClickMunnar"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_picks"
                android:layout_marginTop="-30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/wayanad_pic"
                android:src="@drawable/wayanad"
                android:onClick="onClickWayanad"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/top_picks"
                android:layout_marginTop="-30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/vagamon_pic"
                android:src="@drawable/vagamon"
                android:onClick="onClickVagamon"/>

            </ViewFlipper>

        </RelativeLayout>




            <TextView
             android:id="@+id/most_searched_places"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/view_flipper_relative"
             android:layout_marginTop="-28dp"
                android:layout_marginLeft="10dp"
             android:paddingTop="1dp"
             android:text="Most searched places"
             android:textColor="#030303"
             android:textSize="17sp"/>


         <TextView
             android:id="@+id/popular_restaurants"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/most_searched_recycler"
             android:layout_marginTop="20dp"
             android:layout_marginLeft="10dp"
             android:paddingTop="1dp"
             android:text="Popular Restaurants"
             android:textColor="#030303"
             android:textSize="17sp" />

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/restrecycler"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/popular_restaurants"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="4dp"
             android:layout_marginBottom="12dp" />

         <androidx.recyclerview.widget.RecyclerView
             android:id="@+id/most_searched_recycler"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/most_searched_places"
             android:paddingLeft="10dp"
             android:layout_marginTop="6dp" />


     </RelativeLayout>


    </ScrollView>

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/icon_bar"
            android:src="@drawable/iconbar2"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linear_layout_icons">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:id="@+id/location_icon"
            android:src="@drawable/locationicon"
            android:paddingLeft="30dp"
            android:paddingBottom="35dp"
            android:paddingRight="40dp"/>

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:id="@+id/search_icon"
             android:src="@drawable/searchicon"
             android:paddingLeft="40dp"
             android:paddingRight="40dp"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:id="@+id/notification_icon"
              android:src="@drawable/notificationicon"
              android:paddingLeft="40dp"
              android:paddingRight="40dp"/>

          <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:id="@+id/user_icon"
              android:src="@drawable/usericon"
              android:paddingLeft="20dp"
              android:paddingRight="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        tools:ignore="UnknownId">

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:text="Location"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:paddingBottom="15dp"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:text="Search"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:paddingBottom="15dp"/>

          <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:text="Notification"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
              android:paddingBottom="15dp"/>

           <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentBottom="true"
             android:text="User"
               android:paddingLeft="20dp"
               android:paddingRight="20dp"
               android:paddingBottom="15dp"/>
    </LinearLayout>
      </RelativeLayout>

</RelativeLayout>

