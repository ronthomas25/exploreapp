<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ron.exploreapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".gridview_image_activity"></activity>
        <activity android:name=".loc_search_activity" />
        <activity android:name=".search_loc" />
        <activity android:name=".SignUpActivity" />
        <activity android:name=".rest_firebase_activity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".LogInActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".NotificationActivity" />
        <activity
            android:name=".SearchActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".rest_activity" />
        <activity android:name=".toppicks_activity" />
        <activity android:name=".mostsearched_activity" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>